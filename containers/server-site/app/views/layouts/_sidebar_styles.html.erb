<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
  }

  .sidebar {
    width: 250px;
    background: white;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
    z-index: 1000;
  }

  .sidebar-header {
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .sidebar-header h2 {
    font-size: 20px;
    font-weight: 700;
  }

  .sidebar-nav {
    flex: 1;
    padding: 10px 0;
  }

  .nav-item, .sidebar-link {
    display: flex;
    align-items: center;
    padding: 12px 20px;
    color: #333;
    text-decoration: none;
    transition: all 0.2s;
    border-left: 3px solid transparent;
  }

  .nav-item:hover, .sidebar-link:hover {
    background: #f8f9fa;
    border-left-color: #667eea;
  }

  .nav-item.active {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-left-color: #667eea;
    color: #667eea;
    font-weight: 600;
  }

  .nav-icon {
    font-size: 20px;
    margin-right: 12px;
    width: 24px;
    text-align: center;
  }

  .nav-text {
    font-size: 14px;
  }

  .sidebar-footer {
    border-top: 1px solid #e0e0e0;
    padding: 10px 0;
  }

  .main-content {
    margin-left: 250px;
    flex: 1;
    min-height: 100vh;
    padding: 0;
  }

  .page-container {
    padding: 20px;
  }

  .stat-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  .stat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
  }

  .stat-header h2 {
    color: #333;
    font-size: 24px;
    font-weight: 600;
  }

  .stat-icon {
    font-size: 32px;
  }

  .stat-content {
    /* Content styles */
  }

  .chart-container {
    position: relative;
    margin-bottom: 25px;
    width: 100%;
    height: 300px;
    background: #f8f9fa;
    border-radius: 10px;
    padding: 10px;
  }

  .chart-container canvas {
    width: 100%;
    height: 100%;
    display: block;
  }

  .chart-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 48px;
    font-weight: 700;
    color: #333;
    pointer-events: none;
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
  }

  .stat-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .stat-row {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .stat-row:last-child {
    border-bottom: none;
  }

  .stat-label {
    color: #666;
    font-size: 14px;
  }

  .stat-value {
    color: #333;
    font-size: 14px;
    font-weight: 600;
  }

  .player-count {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding: 15px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
    color: white;
  }

  .count-display {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .count-number {
    font-size: 48px;
    font-weight: 700;
    line-height: 1;
  }

  .count-label {
    font-size: 14px;
    opacity: 0.9;
    margin-top: 5px;
  }

  .count-total {
    font-size: 14px;
    opacity: 0.9;
  }

  .players-list {
    max-height: 600px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .player-item {
    padding: 15px;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #ccc;
    transition: all 0.2s;
  }

  .player-item.online {
    background: #e8f5e9;
    border-left-color: #4caf50;
  }

  .player-item:hover {
    transform: translateX(5px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .player-name {
    font-weight: 600;
    font-size: 16px;
    color: #333;
    margin-bottom: 8px;
  }

  .player-status {
    display: flex;
    gap: 15px;
    align-items: center;
    margin-bottom: 5px;
    font-size: 13px;
  }

  .status-badge {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .online-badge {
    background: #4caf50;
    color: white;
  }

  .offline-badge {
    background: #9e9e9e;
    color: white;
  }

  .session-time,
  .last-seen {
    color: #666;
  }

  .player-stats {
    font-size: 12px;
    color: #888;
  }

  .playtime {
    font-weight: 500;
  }

  .no-players {
    text-align: center;
    padding: 40px;
    color: #999;
    font-style: italic;
  }

  .page-header {
    margin-bottom: 30px;
  }

  .page-header h1 {
    color: #333;
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .page-subtitle {
    color: #000;
    font-size: 16px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 30px;
  }

  .server-status-card {
    background: white;
    border-radius: 12px;
    padding: 25px 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
    border-left: 5px solid #667eea;
    transition: all 0.3s;
  }

  .server-status-card.ready {
    border-left-color: #4caf50;
    background: linear-gradient(135deg, #e8f5e9 0%, #ffffff 100%);
  }

  .server-status-card.initializing {
    border-left-color: #ff9800;
    background: linear-gradient(135deg, #fff3e0 0%, #ffffff 100%);
  }

  .server-status-card.unknown {
    border-left-color: #9e9e9e;
    background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
  }

  .server-status-content {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .server-status-icon {
    font-size: 48px;
    line-height: 1;
  }

  .server-status-text h2 {
    color: #333;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .server-status-text p {
    color: #666;
    font-size: 16px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
    .sidebar {
      width: 200px;
    }

    .main-content {
      margin-left: 200px;
    }
  }
</style>

